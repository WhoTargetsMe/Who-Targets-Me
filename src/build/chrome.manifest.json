{
	"version": "1.2.6",
	"name": "__MSG_appName__",
	"manifest_version": 2,
	"description": "__MSG_appDesc__",
	"default_locale": "en",
	"browser_action": {
		"default_title": "__MSG_appName__",
		"default_popup": "frontend/index.html",
		"default_icon": "logo-128.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"storage",
		"notifications",
		"<all_urls>"
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["daemon/index.js"]
		}
	],
	"background": {
		"scripts": ["daemon/index.js"]
	},
	"icons": {
		"128": "logo-128.png"
	}
}
