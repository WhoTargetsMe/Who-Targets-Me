{
  "version": "1.5.0",
  "name": "__MSG_appName__",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "browser_action": {
    "default_title": "__MSG_appName__",
    "default_icon": "wtm_logo_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://facebook.com/*",
        "*://*.facebook.com/*",
        "*://whotargets.me/*",
        "*://*.whotargets.me/*",
        "*://localhost/*"
      ],
      "js": ["daemon/index.js", "daemon/collect.js"]
    }
  ],
  "background": {
    "scripts": ["daemon/index.js"]
  },
  "permissions": ["<all_urls>", "tabs", "storage"],
  "icons": {
    "128": "wtm_logo_128.png"
  },
  "web_accessible_resources": ["daemon/overload.js", "daemon/overload.js.map"]
}
