{
	"version": "0.1.3",
	"name": "Who Targets Me",
	"manifest_version": 2,
	"description": "Track which entities are targeting you with adverts",
	"browser_action": {
		"default_title": "Who targets me?",
		"default_popup": "popup.html",
		"default_icon": "logo-128.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"storage",
		"notifications",
		"*://*.facebook.com/*",
		"http://fonts.googleapis.com/",
		"https://fonts.googleapis.com/",
		"*://who-targets-me.herokuapp.com/*"
	],
	"content_scripts": [
		{
			"matches": ["*://*.facebook.com/*"],
			"js": ["jquery-3.2.1.min.js", "session.js", "facebook.js"]
		}
	],
	"background": {
		"scripts": ["jquery-3.2.1.min.js", "session.js", "background.js"]
	},
	"icons": {
		"128": "logo-128.png"
	}
}
