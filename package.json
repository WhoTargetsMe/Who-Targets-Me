{
  "name": "who-targets-me",
  "version": "1.4.0",
  "description": "Track the extent of digital political advertising, discover which parties are targeting you",
  "main": "index.js",
  "apiUrl": "https://wtm-api.whotargets.me/v1/",
  "apiUrlLocal": "http://localhost:3000/",
  "resultsUrl": "https://results.whotargets.me/",
  "resultsUrlLocal": "http://localhost:3000/",
  "scripts": {
    "dev-daemon": "OFFLINE=true BROWSER=chrome webpack --config src/build/webpack.daemon.config.js --watch",
    "build-chrome": "BROWSER=chrome webpack --config src/build/webpack.daemon.config.js",
    "build-firefox": "BROWSER=firefox webpack --config src/build/webpack.daemon.config.js",
    "start:firefox": "web-ext run --source-dir ./build/firefox/",
    "start:chrome": "web-ext run --target chromium --source-dir ./build/chrome/"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.1",
    "es6-promise-pool": "^2.5.0",
    "fetch-http-client": "^1.0.1",
    "jquery": "^3.2.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.5",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "web-ext": "^7.2.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "babel": {
    "presets": []
  }
}
